URL: <%= link_to 'Here is your fucking button', "http://#{@post.url}" %><br><br>

Title: <%= @post.title %><br>
Body: <%= @post.body %>
<p>Comments:</p>
<% @comments.each do |comment| %>
  <p><%= comment.text %></p>
  <p><%= comment.user_id %></p>
<% end %>

<%= form_for ([@post, @post.comments.build]) do |f| %>
<p>
  <%= f.label :text %><br>
  <%= f.text_area :text %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>
