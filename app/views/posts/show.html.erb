URL: <%= link_to 'Here is your fucking button', "http://#{@post.url}" %><br><br>

Title: <%= @post.title %><br>
Body: <%= @post.body %><br>
<%= link_to "edit post", edit_post_path(@post) %>
<p>Comments:</p>
<% @comments.each do |comment| %>
  <p><%= comment.text %></p>
  <%= link_to "edit comment", edit_post_comment_path(comment.post, comment) %>
  <%= link_to 'delete comment', [comment.post, comment], method: :delete, data: { confirm: 'YES?!' } %>
<% end %>

<%= form_for ([@post, @post.comments.build]) do |f| %>
<p>
  <%= f.label :text %><br>
  <%= f.text_area :text %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>

